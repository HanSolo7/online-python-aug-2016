5. strings_02_algorithm:

	function isPalindrome(str) {
	    for (var idx = str.length - 1; idx >= str.length / 2; idx -= 1) {    // QUESTION: Why are we referencing 'str.length-1' here?
	        if (str[idx] != str[str.length - 1 - idx]) {
	            return false;
	        }
	    }
	    return true;
	}
